    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-12 bg-muted/50">
    <div class="container px-4 md:px-6">
      <div class="flex flex-col items-center justify-center space-y-4 text-center animate-on-scroll">
        <div class="space-y-2">
          <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">About Me</h2>
