---
import Layout from "@layouts/Layout.astro";
import { Button } from "@components/ui/button.tsx";
---

<Layout title="404 - Not Found">
    <div
        class="flex flex-col items-center justify-center h-full px-4 text-center"
    >
        <div class="max-w-md flex gap-2 flex-col items-center justify-center">
            <h1 class="text-9xl font-extrabold tracking-tight text-primary">
                404
            </h1>
            <h2 class="text-2xl font-bold">Page not found</h2>
            <p class="text-muted-foreground">
                Sorry, we couldn't find the page you're looking for. It might
                have been moved, deleted, or never existed.
            </p>

            <a href="/">
                <Button> Back to home</Button>
            </a>
        </div>
    </div>
</Layout>
