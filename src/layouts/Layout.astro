---
import "../styles/global.css";
import { SEO, type SEOProps } from "astro-seo";
import Header from "./Header.astro";
import Footer from "./Footer.astro";

export interface Props {
  seo?: SEOProps;
  title: string;
  structuredData?: string;
}

const { title = "Nisarg Bhatt", seo, structuredData } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="noarchive" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    {seo ? <SEO {...seo} /> : null}
    {structuredData ? <script is:inline is:raw type="application/ld+json" set:html={structuredData} /> : null}
  </head>
  <body class="h-full w-full min-h-screen flex flex-col justify-start items-start">
    <Header />
    <main class="w-full px-1 flex-1">
      <div class="container mx-auto">
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --font-family: "Noto Sans", sans-serif;
  }
  html {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
    scroll-margin-top: 20px;
  }
  * {
    min-width: 0;
  }
</style>
