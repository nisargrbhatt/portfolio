---
export interface Props {
  href: string;
  target?: HTMLAnchorElement["target"];
  style?: string;
}

const props = Astro.props;
---

<a
  class="text-sm font-medium text-muted-foreground transition-colors hover:text-primary"
  href={props.href}
  target={props?.target}
  style={props.style}
>
  <slot />
</a>
